{
  "name": "lab",
  "publisher": "MatejPur",
  "displayName": "LAB",
  "icon": "./Assets/icon.png",
  "description": "",
  "repository": {
    "url": "https://github.com/PuR0kY/LAB_Scripter"
  },
  "version": "1.0.1",
  "engines": {
    "vscode": "^1.89.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onView:lab"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "configuration": [
      {
        "type": "object",
        "title": "LAB SCRIPTER",
        "properties": {
          "lab.scriptsPath": {
            "type": "string",
            "default": "",
            "description": "Path to the scripts directory"
          }
        }
      }
    ],
    "views": {
      "explorer": [
        {
          "id": "lab",
          "name": "LAB SCRIPTER"
        }
      ]
    },
    "commands": [
      {
        "command": "lab.runScript",
        "title": "Open Script"
      },
      {
        "command": "lab.editScript",
        "title": "Edit Script",
        "icon": "$(extensions-configure-recommended)"
      }
    ],
    "menus": {
      "view/item/context": [
        {
          "when": "view == lab",
          "command": "lab.editScript",
          "group": "inline"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.89.0",
    "@types/mocha": "^10.0.6",
    "@types/node": "18.x",
    "@typescript-eslint/eslint-plugin": "^7.11.0",
    "@typescript-eslint/parser": "^7.11.0",
    "eslint": "^8.57.0",
    "typescript": "^5.4.5",
    "@vscode/test-cli": "^0.0.9",
    "@vscode/test-electron": "^2.4.0"
  }
}