{
  "name": "lab",
  "publisher": "MatejPur",
  "displayName": "LAB",
  "icon": "src/Assets/icon.png",
  "description": "",
  "repository": {
    "url": "https://github.com/PuR0kY/LAB_Scripter"
  },
  "version": "1.0.3",
  "engines": {
    "vscode": "^1.89.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "configuration": [
      {
        "type": "object",
        "title": "LAB SCRIPTER",
        "properties": {
          "lab.scriptsPath": {
            "type": "string",
            "default": "",
            "description": "Path to the scripts directory"
          }
        }
      }
    ],
    "views": {
      "explorer": [
        {
          "id": "lab",
          "name": "LAB SCRIPTER"
        }
      ]
    },
    "commands": [
      {
        "command": "lab.runScript",
        "title": "Run Script",
        "icon": "$(debug-start)"
      },
      {
        "command": "lab.editScript",
        "title": "Edit Script",
        "icon": "$(extensions-configure-recommended)"
      }
    ],
    "menus": {
      "view/item/context": [
        {
          "when": "view == lab && viewItem == scriptItem",
          "command": "lab.editScript",
          "group": "inline"
        },
        {
          "when": "view == lab && viewItem == scriptItem",
          "command": "lab.runScript",
          "group": "inline"
        },
        {
          "when": "view == lab && viewItem == folderItem",
          "command": "lab.runScript",
          "group": "inline"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.6",
    "@types/node": "18.x",
    "@types/vscode": "^1.89.0",
    "@typescript-eslint/eslint-plugin": "^7.11.0",
    "@typescript-eslint/parser": "^7.11.0",
    "@vscode/test-cli": "^0.0.9",
    "@vscode/test-electron": "^2.4.0",
    "esbuild": "^0.21.5",
    "eslint": "^8.57.0"
  },
  "dependencies": {
    "generator": "^0.0.4",
    "typescript": "^5.4.5",
    "vsce": "^2.15.0",
    "yo": "^1.4.2"
  }
}
